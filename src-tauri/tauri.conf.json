{
  "$schema": "https://raw.githubusercontent.com/nicerdicer/tauri-v2-schema/main/tauri-conf-v2.json",
  "productName": "LocalDock",
  "version": "0.1.0",
  "identifier": "com.localdock.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "LocalDock",
        "width": 380,
        "height": 550,
        "resizable": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "opener": {
      "openUrl": {
        "enabled": true
      }
    }
  }
}
